{
  "manifest_version": 2,

  "name": "Dominion Beeper",
  "description": "Extension to make the online Dominion game beep when its your turn.",
  "version": "0.0.0.2",

  "content_scripts": [
    {
      "matches":["https://dominion.games/*", "https://www.dominion.games/*"],
      "js":["js/main.js"]
    }
  ],

  "permissions": ["storage"],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
